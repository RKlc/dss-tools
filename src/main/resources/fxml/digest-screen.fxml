<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sk.isdd.validator.controller.DigestController">

	<padding>
		<Insets bottom="20" left="20" right="20" top="20" />
	</padding>

	<children>
		<HBox styleClass="hbox-style">
			<children>
				<Label styleClass="label-style" text="%lblSourceFile" />
				<Button fx:id="btnSourceFile" mnemonicParsing="false" text="%emptySelectFile" />
			</children>
		</HBox>

        <HBox styleClass="hbox-style">
            <children>
                <Label styleClass="label-style" text="%lblSourceFileInfo" />
                <Label fx:id="lblSourceFileInfo" />
            </children>
        </HBox>

        <HBox styleClass="hbox-style">
            <children>
                <Label styleClass="label-style" text="%lblTransformation" />
                <ComboBox fx:id="cbMethod" />
                <Label fx:id="lblMethodUri" />
            </children>
        </HBox>

        <Separator styleClass="separator-style" />

		<HBox styleClass="hbox-style">
			<children>
				<Button fx:id="btnCalculate" mnemonicParsing="false" text="%btnCalculate" />
                <Button fx:id="btnSaveAs" mnemonicParsing="false" text="%btnSaveAs" />
			</children>
		</HBox>

        <AnchorPane>
            <TextArea fx:id="digestText" editable="false" prefHeight="300" styleClass="read-only-text-style" text="lorem ipsum dolor"
                    AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
        </AnchorPane>
<!--
        <HBox styleClass="hbox-style">
            <children>
                <TextArea fx:id="digestText" styleClass="textarea-style" editable="true" text="lorem ipsum dolor sit abet"/>
            </children>
        </HBox>
-->
    </children>
</VBox>
